{
  "name": "es2-import-tool",
  "version": "1.0.1",
  "description": "Escape Simulator 2 Import Tool",
  "main": "src/main.js",
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --publish never"
  },
  "dependencies": {
    "fs-extra": "^11.2.0",
    "json5": "^2.2.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "electron": "^32.2.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.gg3l.es2importtool",
    "productName": "ES2 Import Tool",
    "files": [
      "src/**/*",
      "renderer/**/*",
      "assets/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "icon": "icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "icon": "icon.png"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "icon": "icon.png"
    },
    "icon": "icon.png",
    "nsis": {
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "installerHeaderIcon": "icon.ico",
      "packElevateHelper": false
    }
  }
}
